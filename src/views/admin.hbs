<!--My profile-->
    <!--History-->
    {{#if userLoggedIn}}
        <div class="container-fluid">
            <div class="container">
                <div class="row">
                    <div class="col-sm-3 col-xs-12 px-0">
                        <div class="nav flex-sm-column flex-row nav-pills px-0" id="profile-pills" role="tablist" aria-orientation="vertical">
                            <a class="profile-pill {{active_edit_product}}" id="v-pills-edit-product-tab" data-toggle="pill" href="#v-pills-edit-product" role="tab" aria-controls="v-pills-edit-product" aria-selected="true">Chỉnh sửa sản phẩm</a>
                            <a class="profile-pill {{active_add_product}}" id="v-pills-add-product-tab" data-toggle="pill" href="#v-pills-add-product" role="tab" aria-controls="v-pills-add-product" aria-selected="false">Thêm sản phẩm</a>
                            <a class="profile-pill {{active_remove_product}}" id="v-pills-remove-product-tab" data-toggle="pill" href="#v-pills-remove-product" role="tab" aria-controls="v-pills-remove-product" aria-selected="true">Xóa sản phẩm</a>
                            <a class="profile-pill {{active_order_management}}" id="v-pills-order-management-tab" data-toggle="pill" href="#v-pills-order-management" role="tab" aria-controls="v-pills-order-management" aria-selected="false">Quản lý đơn hàng</a>
                            <a class="profile-pill {{active_user_management}}" id="v-pills-user-management-tab" data-toggle="pill" href="#v-pills-user-management" role="tab" aria-controls="v-pills-user-management" aria-selected="false">Quản lý người dùng</a>
                        </div>                        
                    </div>

                    <div class="col-sm-9 col-xs-12 px-0">
                        <div class="tab-content" id="profile-pills-tabContent">
                        <!--Edit product tab content-->
                        <div class="tab-pane fade {{active_edit_product}}" id="v-pills-edit-product" role="tabpanel" aria-labelledby="v-pills-edit-product-tab">
                            <div class="container p-4">
                                <div class="container">
                                    <legend class="pb-1 text-center font-weight-bold">Truy vấn sản phẩm</legend>
                                    <form action="/admin/edit-product-find" method="get">
                                        <div class="row pb-3">
                                            <div class="col-xs-12 col-sm-10">
                                                <div class="row">
                                                    <div class="pb-1 col-xs-12 col-sm-4 col-md-3">
                                                        <label for="product_id" >ID</label><br>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-8 col-md-9">
                                                        <input type="text" name="product_id" id="product_id" class="input-full-width" value="" placeholder="Mã sản phẩm" required>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-4 col-md-3">
                                                        <label for="product_name" >Tên sản phẩm</label>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-8 col-md-9">
                                                        <input type="text" name="product_name" id="product_name" class="input-full-width" value="" placeholder="Tên sản phẩm" required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col text-center align-self-center">
                                                <button type="submit" class="submit-btn" id="profile-submit">Tìm thông tin</button>
                                            </div>
                                        </div>
                                    </form>
                                    <hr>
                                    <legend class="pb-1 text-center font-weight-bold">Kết quả truy vấn</legend>
                                    <form action="/admin/edit-product-update" method="get">
                                        <div class="row pb-3">
                                            <div class="col-xs-12 col-sm-10">
                                                <div class="row">
                                                    {{#with product_find_result}}
                                                    <div class="pb-1 col-xs-12 col-sm-4 col-md-3">
                                                        <label for="product_name_result" >Tên sản phẩm</label><br>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-8 col-md-9">
                                                        <input type="text" name="product_name_result" id="product_name_result" class="input-full-width" value="{{product_name_result}}" placeholder="Sửa tên sản phẩm" required>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-4 col-md-3">
                                                        <label for="stock_result">Số Lượng</label>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-8 col-md-9">
                                                        <input type="text" name="stock_result" id="stock_result" class="input-full-width" value="{{stock_result}}" placeholder="Sửa số lượng" required>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-4 col-md-3">
                                                        <label for="price_result" >Giá</label>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-8 col-md-9">
                                                        <input type="text" name="price_result" id="price_result" class="input-full-width" value="{{price_result}}" placeholder="Sửa giá" required>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-4 col-md-3">
                                                        <label for="category_result" >Phân loại</label>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-8 col-md-9">
                                                        <input type="text" name="category_result" id="category_result" class="input-full-width" value="{{category_result}}" placeholder="Sửa phân loại" required>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-4 col-md-3">
                                                        <label for="description_result" >Mô tả</label>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-8 col-md-9">
                                                        <input type="text" name="description_result" id="description_result" class="input-full-width" value="{{description_result}}" placeholder="Thêm đặc tả sản phẩm" required>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-4 col-md-3">
                                                        <label for="small_image_result" >Hình nhỏ</label>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-8 col-md-9">
                                                        <input type="file" name="small_image_result" id="small_image_result" >
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-4 col-md-3">
                                                        <label for="big_image_result" >Hình lớn</label>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-8 col-md-9">
                                                        <input type="file" name="big_image_result" id="big_image_result" >
                                                    </div>
                                                    {{/with}}
                                                </div>
                                            </div>
                                            <div class="col text-center align-self-center">
                                                <button type="submit" class="submit-btn" id="profile-submit">Cập nhật</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!--Add a product tab content-->
                        <div class="tab-pane fade {{active_add_product}}" id="v-pills-add-product" role="tabpanel" aria-labelledby="v-pills-add-product-tab">
                            <div class="container p-4">
                                <div class="container">
                                    <legend class="pb-1 text-center font-weight-bold">Thêm sản phẩm</legend>
                                    <form action="/admin/add-product" method="get">
                                        <div class="row pb-3">
                                            <div class="col-xs-12 col-sm-10">
                                                <div class="row">
                                                    <div class="pb-1 col-xs-12 col-sm-4 col-md-3">
                                                        <label for="product_name" >Tên sản phẩm</label><br>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-8 col-md-9">
                                                        <input type="text" name="product_name" id="product_name" class="input-full-width" placeholder="Tên sản phẩm" required>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-4 col-md-3">
                                                        <label for="stock">Số Lượng</label>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-8 col-md-9">
                                                        <input type="text" name="stock" id="stock" class="input-full-width" placeholder="Số lượng" required>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-4 col-md-3">
                                                        <label for="price" >Giá</label>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-8 col-md-9">
                                                        <input type="text" name="price" id="price" class="input-full-width" placeholder="Giá" required>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-4 col-md-3">
                                                        <label for="category" >Phân loại</label>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-8 col-md-9">
                                                        <input type="text" name="category" id="category" class="input-full-width" placeholder="Phân loại" required>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-4 col-md-3">
                                                        <label for="description" >Mô tả</label>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-8 col-md-9">
                                                        <input type="text" name="description" id="description" class="input-full-width" placeholder="Đặc tả sản phẩm" required>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-4 col-md-3">
                                                        <label for="small_image" >Hình nhỏ</label>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-8 col-md-9">
                                                        <input type="file" name="small_image" id="small_image" >
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-4 col-md-3">
                                                        <label for="big_image" >Hình lớn</label>
                                                    </div>
                                                    <div class="pb-1 col-xs-12 col-sm-8 col-md-9">
                                                        <input type="file" name="big_image" id="big_image" >
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col text-center align-self-center">
                                                <button type="submit" class="submit-btn" id="profile-submit">Thêm mới sản phẩm</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!--remove a product tab content-->
                        <div class="tab-pane fade {{active_remove_product}}" id="v-pills-remove-product" role="tabpanel" aria-labelledby="v-pills-pills-remove-product-tab">
                            <div class="container p-4">
                                <div class="container">
                                    <legend class="pb-1 text-center font-weight-bold">Xóa sản phẩm</legend>
                                    <form action="/admin/remove-product" method="get">
                                        <div class="row pb-3">
                                            <div class="col-xs-12 col-sm-10">
                                                <div class="row">
                                                    <div class="pb-2 col-xs-12 col-sm-4 col-md-3">
                                                        <label for="product_id" >ID</label><br>
                                                    </div>
                                                    <div class="pb-2 col-xs-12 col-sm-8 col-md-9">
                                                        <input type="text" name="product_id" id="product_id" class="input-full-width" value="" placeholder="Mã sản phẩm" required>
                                                    </div>
                                                    <div class="pb-2 col-xs-12 col-sm-4 col-md-3">
                                                        <label for="product_name" >Tên sản phẩm</label>
                                                    </div>
                                                    <div class="pb-2 col-xs-12 col-sm-8 col-md-9">
                                                        <input type="text" name="product_name" id="product_name" class="input-full-width" value="" placeholder="Tên sản phẩm" required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col text-center align-self-center">
                                                <button type="submit" class="submit-btn" id="profile-submit">Xóa</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!--order management tab content-->
                        <div class="tab-pane fade  {{active_order_management}}" id="v-pills-order-management" role="tabpanel" aria-labelledby="v-pills-order-management-tab">
                            <legend class="pt-4 text-center font-weight-bold">Quản lý đơn hàng</legend>
                            <table class="table table-bordered table-hover">
                                <thead class="thead-dark text-center">
                                    <tr>
                                        <th scope="col"></th>
                                        <th scope="col">ID</th>
                                        <th scope="col">Tên khách hàng</th>
                                        <th scope="col">Tổng tiền</th>
                                        <th scope="col">Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#if order_management}}
                                    <form action="/admin/delete-order" method="get">
                                        {{#each order_management}}
                                        <tr>
                                            <td>
                                                <input type="checkbox" name="order_selected" value="{{id}}" id="order-{{id}}">
                                            </td>
                                            <td>{{id}}</td>
                                            <td>{{customer}}</td>
                                            <td>{{total}}</td>
                                            <td>{{state}}</td>
                                        </tr>
                                        {{/each}}
                                        <tr>
                                            <td colspan="5">
                                                <div class="col text-center align-self-center">
                                                <button type="submit" class="submit-btn" id="profile-submit">Xóa các order được chọn</button>
                                                </div>
                                            </td>
                                        </tr>
                                    </form>
                                    {{else}}
                                    <tr class="text-center">
                                        <td colspan="5">
                                            Không có dữ liệu trả về
                                        </td>
                                    </tr>   
                                    {{/if}}
                                    
                                </tbody>
                            </table>
                        </div>
                        <!--user management tab content-->
                        <div class="tab-pane fade  {{active_user_management}}" id="v-pills-user-management" role="tabpanel" aria-labelledby="v-pills-user-management-tab">
                            <legend class="pt-4 text-center font-weight-bold">Quản lý Người dùng</legend>
                            <table class="table table-bordered table-hover">
                                <thead class="thead-dark text-center">
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Tên đăng nhập</th>
                                        <th scope="col">Reset mật khẩu</th>
                                        <th scope="col">Xóa tài khoản</th>
                                    </tr>
                                </thead>
                                <tbody class="thead-light">
                                    {{#if user_management}}
                                        {{#each user_management}}
                                        <tr>
                                            <td>{{id}}</td>
                                            <td>{{username}}</td>
                                            <td>
                                                <form action="/admin/user-manager-reset-pw" method="get">
                                                    <input type="hidden" id="cust{{id}}" name="userID" value="{{id}}">
                                                    <div class="col text-center align-self-center">
                                                    <button type="submit" class="submit-btn" id="profile-submit">Reset MK</button>
                                                    </div>
                                                </form>
                                            </td>
                                            <td>
                                                <form action="/admin/user-manager-delete" method="get">
                                                    <input type="hidden" id="custDL{{id}}" name="userID" value="{{id}}">
                                                    <div class="col text-center align-self-center">
                                                    <button type="submit" class="submit-btn" id="profile-submit">Xóa</button>
                                                    </div>
                                                </form>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    {{else}}
                                    <tr class="text-center">
                                        <td colspan="4">
                                            Không có dữ liệu trả về
                                        </td>
                                    </tr>                      
                                    {{/if}}
                                    
                                </tbody>
                            </table>
                            <hr>
                            <legend class="pb-1 text-center font-weight-bold">Tạo tài khoản mới</legend>
                                    <form action="/admin/user-manager-create" method="get">
                                        <div class="row pb-3">
                                            <div class="col-xs-12 col-sm-10">
                                                <div class="row ml-3">
                                                    <div class="col-xs-12 col-sm-4 col-md-3">
                                                        <label for="username" >Tên đăng nhập</label><br>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-8 col-md-9">
                                                        <input type="text" name="username" id="username" class="input-full-width" value="" placeholder="Mã sản phẩm" required>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-4 col-md-3">
                                                        <label for="us_password" >Mật khẩu</label>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-8 col-md-9">
                                                        <input type="password" name="us_password" id="us_password" class="input-full-width" value="" placeholder="Tên sản phẩm" required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col mr-3 text-center align-self-center">
                                                <button type="submit" class="submit-btn" id="profile-submit">Tạo tài khoản</button>
                                            </div>
                                        </div>
                                    </form>
                        </div>
                        </div>                        
                    </div>
                </div>
            </div> 
        </div>
    {{else}}
        <h1 class="text-center">REQUIRE USER TO LOGIN (MOVE TO LOGIN PAGE)<br>
            <h5 class = 'text-center'><a  href="/my_profile/demo?activeTab={{page}}">click here to access my profile for demo</a></h5>
            <h3 class = 'text-center'>Đây là demo cho phân hệ user và anonymous </h3>
        </h1>
    {{/if}}
        
