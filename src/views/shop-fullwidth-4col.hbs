<div id="">

        <div class="shop">
            <div class="container-full-half">
                <div class="shop-header">
                    <select class="customed-select" name="#">
                        <option value="az">A to Z</option>
                        <option value="za">Z to A</option>
                        <option value="low-high">Low to High Price</option>
                        <option value="high-low">High to Low Price</option>
                    </select>
                </div>
                <div class="shop-products">
                    <div class="shop-products__grid">
                        <div class="row mx-n1 mx-lg-n3">
                            {{#each Product}} 
                            <div class="col-6 col-sm-6 col-md-4 col-lg-3 px-1 px-lg-3">
                                <div class="product ">
                                    <div class="product-type"><h5 class="-new d-inline-block mr-1">New</h5><h5 class="-sale d-inline-block">-20%</h5></div>
                                    <div class="product-thumb"><a class="product-thumb__image" href="product-detail"><img src="{{this.smallImagePath}}" alt="Product image"/><img src="{{this.bigImagePath}}" alt="Product image"/></a>
                                        <div class="product-thumb__actions">
                                            <div class="product-btn"><a class="btn -white product__actions__item -round product-atc" href="/cart"><i class="fas fa-shopping-bag"></i></a>
                                            </div>
                                            <div class="product-btn"><a class="btn -white product__actions__item -round product-qv" href="#"><i class="fas fa-eye"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="product-content">
                                        <div class="product-content__header">
                                            <div class="product-category">eyes</div>
                                                <div class="rate"><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i></div>
                                        </div><a class="product-name" href="product-detail">{{this.name}}</a>
                                        <div class="product-content__footer">
                                            <h5 class="product-price--main">${{this.price}}</h5>
                                            <h5 class="product-price--discount">{{this.price}}</h5>
                                            <div class="product-colors">
                                                <div class="product-colors__item" style="background-color: #8B0000"></div>
                                                <div class="product-colors__item" style="background-color: #4169E1"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                </div>
                <ul class="paginator">
                    <li class="page-item active">
                      <a href="shop-fullwidth-4col"><button class="page-link">1</button></a>
                    </li>
                    <li class="page-item">
                      <button class="page-link">2</button>
                    </li>
                    <li class="page-item">
                        <a href="shop-fullwidth-4col"><button class="page-link"><i class="far fa-angle-right"></i></button></a>
                    </li>
                  </ul>
            </div>
        </div>
    </div>
