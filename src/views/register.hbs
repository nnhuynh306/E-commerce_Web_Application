<!--Register-->
    <div class="register">
        <h3 class="register-title">REGISTER</h3>
        <div class="register-form">
        <form>
            <div class="input-validator">
                <label class="labelEmail" for="email">Email: </label>
                <input type="text" name="email" placeholder="Enter your email"/>
            </div>
            <div class="input-validator">
                <label class="labelName" for="username"> UserName: </label>
                <input type="text" name="username" placeholder="Enter your UserName"/>
            </div>
            <div class="input-validator">
                <label class="labelPass" for="password"> Password: </label>
                <input type="text" name="password" placeholder="Enter your Password"/>
            </div>
            <div class="input-validator">
                <label class="labelRePass" for="re-password">Enter Password Again: </label>
                <input type="text" name="re-password" placeholder="Enter Password Again"/>
            </div>
            <div class="loginLink">
                <a href="./login.html">Login</a>
            </div>
            <div class="forgotPass">
                <a href="#">Forgot Password</a>
            </div>
            <div class="registerBTN">
                <button id="btn-register" type="submit" >Register</button>
            </div>
        </form>
        </div>
    </div>